<form theme="dark">
  <label>RDP</label>
  <fieldset submitButton="false">
    <input type="time" token="time1">
      <label>Time Range</label>
      <default>
        <earliest>-24h@h</earliest>
        <latest>now</latest>
      </default>
    </input>
  </fieldset>
  <row id="row_top_1">
    <panel>
      <title>RDP Source to Destination I.P.</title>
      <table>
        <search>
          <query>index=zeek_rdp | stats dedup_splitvals=t count AS "Count"  by src_ip, dest_ip | sort src_ip | rename src_ip AS src_ip dest_ip AS dest_ip  | fillnull "Count" | fields src_ip, dest_ip, "Count"</query>
          <earliest>$time1.earliest$</earliest>
          <latest>$time1.latest$</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="drilldown">cell</option>
        <option name="refresh.display">progressbar</option>
      </table>
    </panel>
    <panel>
      <title>Count by cookie</title>
      <table>
        <search>
          <query>index=zeek_rdp | stats count by cookie</query>
          <earliest>$time1.earliest$</earliest>
          <latest>$time1.latest$</latest>
        </search>
        <option name="count">10</option>
        <option name="refresh.display">progressbar</option>
      </table>
    </panel>
  </row>
</form>